@model WWBG.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    <!DOCTYPE html>

        <!-- /.website title -->

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        <!-- CSS Files -->
    <link href="~/Content/Landing/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="~/Content/Landing/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Landing/fonts/icon-7-stroke/css/pe-icon-7-stroke.css" rel="stylesheet">
    <link href="~/Content/Landing/css/animate.css" rel="stylesheet" media="screen">
    <link href="~/Content/Landing/css/owl.theme.css" rel="stylesheet">
    <link href="~/Content/Landing/css/owl.carousel.css" rel="stylesheet">

        <!-- Colors -->
    <link href="~/Content/Landing/css/css-index.css" rel="stylesheet" media="screen">
        <!-- <link href="css/css-index-green.css" rel="stylesheet" media="screen"> -->
        <!-- <link href="css/css-index-purple.css" rel="stylesheet" media="screen"> -->
        <!-- <link href="css/css-index-red.css" rel="stylesheet" media="screen"> -->
        <!-- <link href="css/css-index-orange.css" rel="stylesheet" media="screen"> -->
        <!-- <link href="css/css-index-yellow.css" rel="stylesheet" media="screen"> -->
        <!-- Google Fonts -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic" />


}
<div class="fullscreen landing parallax" style="background-image:url('/Content/login1.JPG'); height:auto" data-img-width="2000" data-img-height="1333" data-diff="100">

    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-7">

                    <!-- /.logo -->
                    <div class="logo wow fadeInDown"> <a href=""><img src="~/Content/Landing/images/logo.png" alt="logo"></a></div>

                    <!-- /.main title -->
                    <h1 class="wow fadeInLeft">
                        Login Form
                    </h1>

                    <!-- /.header paragraph -->
                    <div class="landing-text wow fadeInUp">

                    </div>

                    <!-- /.header button -->
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="head-btn wow fadeInLeft">
                        <p>Create new account?</p>
                        <input type="button" class="btn-default" value="Register" onclick="location.href='@Url.Action("Register", "Account")'" />

                    </div>



                </div>

                <div class="col-md-3">


                    <div style="background-color:white" class="x_panel">
                        <div class="x_title"><h1></h1></div>


                        <hr />

                        @using (Ajax.BeginForm("Login", "Account", new AjaxOptions { LoadingElementId = "loader", OnSuccess = "onSuccess" }, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <!-- start form for validation -->

                            
                          
                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control has-feedback-left", @placeholder = "Email", @required = "" })
                                <span class="fa fa-envelope form-control-feedback left"></span>
                            </div>
                                <div class="form-group has-feedback">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control has-feedback-left", @placeholder = "Password", @required = "" })
                                    <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                                </div>
                             


                                <center>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-success" value="Login" />
                                    </div>
                                </center>
                                <hr />

                        }

                    </div>


                </div>



             
            </div>
        </div>
    </div>
</div>

<!-- /.javascript files -->
<script src="~/Content/Landing/js/jquery.js"></script>
<script src="~/Content/Landing/js/bootstrap.min.js"></script>
<script src="~/Content/Landing/js/custom.js"></script>
<script src="~/Content/Landing/js/jquery.sticky.js"></script>
<script src="~/Content/Landing/js/wow.min.js"></script>
<script src="~/Content/Landing/js/owl.carousel.min.js"></script>
<script>
            new WOW().init();
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}