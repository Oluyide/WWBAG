<div class="fullscreen landing parallax" style="background-image:url('/Content/reg.JPG'); height:auto" data-img-width="2000" data-img-height="1333" data-diff="100">

    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-7">

                    <!-- /.logo -->
                    <div class="logo wow fadeInDown"> <a href=""><img src="~/Content/Landing/images/logo.png" alt="logo"></a></div>

                    <!-- /.main title -->
                    <h1 class="wow fadeInLeft">
                        Registration Form
                    </h1>

                    <!-- /.header paragraph -->
                    <div class="landing-text wow fadeInUp">
                        
                    </div>

                    <!-- /.header button -->
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="head-btn wow fadeInLeft">
                        <p>Already have an account?</p>
                        <input type="button" class="btn-default" value="Login" onclick="location.href='@Url.Action("Login", "Account")'" />

                    </div>



                </div>

                <div class="col-md-3">


                    <div style="background-color:white" class="x_panel">
                        <div class="x_title"><h1></h1></div>
                        
              
                        <hr />

                        @using (Ajax.BeginForm("Register", "Account", new AjaxOptions { LoadingElementId = "loader", OnSuccess = "onSuccess" }, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <!-- start form for validation -->

                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control has-feedback-left", @placeholder = "First name", @required = "" })
                                <span class="fa fa-user form-control-feedback left" ></span>
                            </div>
                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control has-feedback-left", @placeholder = "Last name", @required = "" })
                                <span class="fa fa-user form-control-feedback left"></span>
                            </div>

                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control has-feedback-left", @placeholder = "Phone number", @required = "" })
                                <span class="fa fa-phone form-control-feedback left "></span>
                            </div>
                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control has-feedback-left", @placeholder = "Email", @required = "" })
                                <span class="fa fa-envelope form-control-feedback left" ></span>
                                </div>
                                <div class="form-group has-feedback">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control has-feedback-left", @placeholder = "Password", @required = "" })
                                    <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                                </div>
                                <div style="margin-bottom:4%" class="form-group has-feedback">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control has-feedback-left", @placeholder = "Confirm Password", @required = "" })
                                    <span class="fa fa-lock form-control-feedback left" ></span>
                                </div>

                           
                                <center>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-success" value="Register" />
                                    </div>
                                </center>
                                <hr />
                                
                                }

                            </div>


                </div>



